<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rafel.eblog.mapper.UserMessageMapper">

    <select id="selectMessages" resultType="com.rafel.eblog.vo.UserMessageVo">

        SELECT
            m.*, (
                SELECT
                    username
                FROM
                    `m_user`
                WHERE
                    id = m.from_user_id
            ) AS fromUserName,
            (
                SELECT
                    title
                FROM
                    `m_post`
                WHERE
                    id = m.post_id
            ) AS postTitle
        FROM
            `m_user_message` m

        ${ew.customSqlSegment}

    </select>
</mapper>
